<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.vivus.mybatis.mapper.AccountMapper">
	<update id="createTable">
		create table account (
			user_name varchar(40) not null,
			password varchar(50) not null,
			constraint pk_account primary key (user_name)
		);
	</update>
	<insert id="insertAccount" parameterType="org.vivus.mybatis.domain.Account">
		insert into ACCOUNT
			(user_name, password)
		values
			(#{userName}, #{password})
	</insert>
	<update id="updateAccount" parameterType="org.vivus.mybatis.domain.Account">
		update account
		set password = #{password}
		where user_name = #{userName}
	</update>
	<delete id="deleteAccount" parameterType="org.vivus.mybatis.domain.Account">
		delete from account
		where user_name = #{userName}
	</delete>
	<select id="selectAccount" parameterType="string" resultType="org.vivus.mybatis.domain.Account">
		select *
		from ACCOUNT 
		where id = #{userName}
	</select>
</mapper>